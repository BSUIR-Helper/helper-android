<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сдать тр"
        android:id="@+id/textview_notetitle"
        android:layout_gravity="left|center_vertical"
        android:textSize="25dp"
        android:textColor="#faffff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkbox_notedelete"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предмет: Математика"
        android:id="@+id/textview_notetext"
        android:textStyle="italic"
        android:paddingLeft="20dp"
        android:layout_below="@+id/textview_notetitle"
        android:layout_toRightOf="@+id/checkbox_notedelete"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_notedelete"
        android:checked="false"
        android:focusable="false"
        android:layout_alignTop="@+id/textview_notetitle"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>