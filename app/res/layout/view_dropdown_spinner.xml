<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginRight="0dp"
              android:paddingRight="0dp"
              android:paddingTop="4dp"
              android:paddingLeft="9dp"
              android:paddingBottom="4dp"
              android:background="#ff181818"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:minWidth="160dp">

        <TextView
            android:id="@+id/textview_dropdown_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="313801 (ФКП)"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textview_dropdown_group_default"
            android:layout_width="wrap_content"
            android:textSize="9sp"
            android:visibility="visible"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:text="АКТИВНО"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right"
        android:clickable="true"
        android:background="?selectableItemBackground"
        >

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            />

        <ImageView
            android:src="@drawable/ic_edit"
            android:layout_width="30dp"
            android:clickable="false"
            android:layout_marginTop="3dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/btn_dropdown_delete"
        android:clickable="true"
        android:background="?selectableItemBackground">

        <ImageView
            android:src="@drawable/ic_deletegroups"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_height="30dp"
            />
    </LinearLayout>
</LinearLayout>