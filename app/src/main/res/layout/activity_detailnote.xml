<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_notetitle"
        android:textSize="20sp"
        android:text="Заголовок заметки"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="ДОПОЛНИТЕЛЬНО"
        android:textColor="#f6f7ff"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099cc"
        android:layout_margin="5dp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:id="@+id/textview_notetext"
        android:text="Текст заметки"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="ПРЕДМЕТ"
        android:textColor="#f6f7ff"
        android:id="@+id/textView"
        android:singleLine="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099cc"
        android:layout_margin="5dp"
        android:id="@+id/imageView2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ФК-ЗОЖ СПИДИН"
        android:layout_margin="5dp"
        android:textSize="17sp"
        android:id="@+id/textview_notesubject"
        />

</LinearLayout>
